    <administration>
        <menu img="components/com_rsformhelper/assets/images/s_com_rsformhelper.png" >COM_RSFORMHELPER</menu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>rsformhelper.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <folder>language</folder>
        </files>
        <languages folder="administrator">
			<language tag="en-GB">language/en-GB/en-GB.com_rsformhelper.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_rsformhelper.sys.ini</language>
        </languages>
    </administration>
    <updateservers>
        <server type="extension" priority="1" name="RSForm! Helper">http://www.rkrweb.nl/update/com_rsformhelper/extension.xml</server>
